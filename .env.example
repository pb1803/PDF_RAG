# ============================================
# Environment variables for PDF RAG System
# Copy this file to ".env" and fill your values
# ============================================

# --------------------------
# API Configuration
# --------------------------
DEBUG=true
HOST=0.0.0.0
PORT=8000

# --------------------------
# Qdrant Configuration
# Local persistence (no server needed)
# --------------------------
QDRANT_URL=local
QDRANT_COLLECTION_NAME=pdf_documents

# --------------------------
# Google AI Configuration
# Use API Key OR Service Account (choose one)
# --------------------------

# ---- Service Account Method (Optional) ----
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# PROJECT_ID=your-google-project-id

LOCATION=us-central1

# ---- API Key Method (Recommended) ----
GOOGLE_API_KEY=your_google_api_key_here

# --------------------------
# Model Configuration
# --------------------------
GEMINI_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=text-embedding-004

# --------------------------
# RAG Configuration
# --------------------------
MAX_CHUNK_SIZE=800
MIN_CHUNK_SIZE=200
CHUNK_OVERLAP=100
TOP_K_RETRIEVAL=8
TOP_K_FINAL=5
TEMPERATURE=0.1
MAX_TOKENS=1000

# --------------------------
# File Upload Configuration
# --------------------------
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads

# --------------------------
# Logging Configuration
# --------------------------
LOG_LEVEL=INFO
